<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appers.ayvaz.thetravelingsalesman.TripExpMan$PlaceholderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/fragmentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <!--
                <AutoCompleteTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tripExpManAutoClient"
                    android:layout_weight="5"
                    />
                    -->
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="6dp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/client_name_trip_exp_man"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="6dp"
                        android:gravity="center"
                        android:layout_toStartOf="@+id/selectClient_trip_exp_man"
                        android:lines="1"
                        android:text="Client Not Selected"
                        android:textColor="@color/TextPrimary"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/selectClient_trip_exp_man"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/client_name_trip_exp_man"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_keyboard_arrow_right_grey_900_18dp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/expensesDateText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"

                    android:text="12/12/2015" />

                <ImageButton
                    android:id="@+id/fragmentCalenderButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:src="@drawable/ic_travel_detail_calender_dark" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragmentLinearListLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
