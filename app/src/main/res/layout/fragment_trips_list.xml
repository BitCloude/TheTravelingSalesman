<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.appers.ayvaz.thetravelingsalesman.view.TripsListFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:background="@color/colorPrimaryDark">
        <!--cardview_dark_background-->
        <RelativeLayout
            android:id="@+id/fragment_trips_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/fragment_trips_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 3rd 2015"
                android:textSize="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/white" />
            <ImageView
                android:id="@+id/fragment_trips_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_travel_detail_car_dark"
                android:layout_alignParentEnd="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragment_trips_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="From Hawaii to Paris "
                    android:textSize="20dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/fragment_trips_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Description of flight"
                    android:textSize="15dp"
                    android:layout_below="@id/fragment_trips_from"/>


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
