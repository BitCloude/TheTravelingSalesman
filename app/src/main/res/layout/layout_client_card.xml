<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/cardview_margin">

        <TextView
            android:id="@+id/client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Last"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/client_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company name - 98222"
            android:layout_below="@+id/client_name"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/client_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_below="@+id/client_company"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/linkedInButt"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_linkedin_box"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/button4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/star"
            android:layout_alignBottom="@+id/client_email"
            android:layout_alignStart="@+id/linkedInButt" />

    </RelativeLayout>


</android.support.v7.widget.CardView>