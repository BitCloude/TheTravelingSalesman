<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appers.ayvaz.thetravelingsalesman.ReportsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">
        <include layout="@layout/appbar_layout" />
        <Button
            android:id="@+id/btn_expenses"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="gotoExpenses"
            android:text="@string/expense" />

        <Button
            android:id="@+id/btn_tasks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="gotoTasks"
            android:text="@string/tasks" />
    </LinearLayout>
    <include layout="@layout/navigation_panel" />

</android.support.v4.widget.DrawerLayout>
