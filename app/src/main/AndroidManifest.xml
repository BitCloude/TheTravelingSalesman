<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appers.ayvaz.thetravelingsalesman">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Expenses"
            android:label="@string/title_activity_expenses"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ExpenseAdd"
            android:label="@string/title_activity_expense_add"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Travel"
            android:label="@string/title_activity_travel"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TravelDetail"
            android:label="@string/title_activity_travel_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ClientAddActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TaskAddActivity"
            android:label="@string/title_activity_task_add"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ReportsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ReportsExpenseActivity"
            android:parentActivityName=".ReportsActivity"></activity>
        <activity
            android:name=".ReportsTasksActivity"
            android:parentActivityName=".ReportsActivity"></activity>
        <activity
            android:name=".TripExpMan"
            android:label="@string/title_activity_trip_exp_man"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
