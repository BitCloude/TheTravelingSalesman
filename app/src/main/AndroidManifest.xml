<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.simbiosyscorp.thetravelingsalesman">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_512"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup">
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.Expenses"
            android:label="@string/title_activity_expenses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.ExpenseAdd"
            android:label="@string/title_activity_expense_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.Travel"
            android:label="@string/title_activity_travel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.TravelDetail"
            android:label="@string/title_activity_travel_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.simbiosyscorp.thetravelingsalesman.view.ClientEditActivity" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.ReportsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.TripExpMan"
            android:label="@string/title_activity_trip_exp_man"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.LandingActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.ClientActivity"
            android:parentActivityName="com.simbiosyscorp.thetravelingsalesman.view.LandingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.ClientInfoActivity"
            android:label="@string/title_activity_client_info"
            android:parentActivityName="com.simbiosyscorp.thetravelingsalesman.view.LandingActivity"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.TaskListActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.TaskSearchResultActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/task_searchable" />
        </activity>
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.ClientPickActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.ReportTaskActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.simbiosyscorp.thetravelingsalesman.view.ReportsActivity" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.ReportExpenseActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.simbiosyscorp.thetravelingsalesman.view.ReportsActivity" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.simbiosyscorp.thetravelingsalesman.view.BaseActivity" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.SettingsActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.simbiosyscorp.thetravelingsalesman.view.ForgotPasswordActivity"
            android:launchMode="singleTask" />
        <activity android:name="com.simbiosyscorp.thetravelingsalesman.view.ResultActivity" />
        <activity android:name="com.simbiosyscorp.thetravelingsalesman.view.ImportClientActivity" />
        <activity android:name="com.simbiosyscorp.thetravelingsalesman.view.HelpActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"
            >

        </activity>
    </application>

</manifest>
